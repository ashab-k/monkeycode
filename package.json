{
  "name": "monkeycode",
  "displayName": "Go Dependency Threat Scanner",
  "description": "Scans Go dependencies for vulnerabilities and security issues",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Security"
  ],
  "keywords": [
    "go",
    "golang",
    "security",
    "vulnerability",
    "dependencies"
  ],
  "activationEvents": [
    "onLanguage:go",
    "workspaceContains:**/go.mod"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "monkeycode.scanDependencies",
        "title": "Scan Dependencies"
      },
      {
        "command": "monkeycode.showVulnerableCode",
        "title": "Show Vulnerable Code"
      }
    ],
    "keybindings": [
      {
        "command": "monkeycode.scanDependencies",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorLangId == go"
      },
      {
        "command": "monkeycode.showVulnerableCode",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorLangId == go"
      }
    ],
    "configuration": {
      "title": "Go Dependency Threat Scanner",
      "properties": {
        "monkeycode.watchGoMod": {
          "type": "boolean",
          "default": true,
          "description": "Automatically scan dependencies when go.mod changes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "axios": "^1.6.2"
  }
}
